{
    "name": "@zenstackhq/language",
    "version": "2.10.1",
    "displayName": "ZenStack modeling language compiler",
    "description": "ZenStack modeling language compiler",
    "homepage": "https://zenstack.dev",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "typings": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist",
        "generate": "langium generate && npx tsx script/generate-plist.ts",
        "watch": "concurrently \"langium generate --watch\" \"tsup-node --watch\"",
        "lint": "eslint src --ext ts",
        "build": "pnpm lint --max-warnings=0 && pnpm generate && tsup-node && pnpm pack --pack-destination ../../.build",
        "prepublishOnly": "pnpm build"
    },
    "files": ["dist", "syntaxes"],
    "author": "ZenStack Team",
    "license": "MIT",
    "devDependencies": {
        "langium-cli": "1.3.1",
        "plist2": "^1.1.3"
    },
    "dependencies": {
       "langium": "1.3.1"
    },
    "exports": {
        "./ast": {
            "types": "./dist/ast.d.ts",
            "default": "./dist/ast.js"
        },
        "./module": {
            "types": "./dist/module.d.ts",
            "default": "./dist/module.js"
        },
        "./package.json": "./package.json"
    },
    "contributes": {
        "languages": [
            {
                "id": "zmodel",
                "extensions": [
                    ".zmodel"
                ]
            }
        ],
        "grammars": [
            {
                "language": "zmodel",
                "scopeName": "source.zmodel",
                "path": "./syntaxes/zmodel.tmLanguage.json"
            }
        ]
    }
}
