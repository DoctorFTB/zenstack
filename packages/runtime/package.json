{
    "name": "@zenstackhq/runtime",
    "displayName": "ZenStack Runtime Library",
    "version": "2.10.1",
    "description": "Runtime of ZenStack for both client-side and server-side environments.",
    "repository": {
        "type": "git",
        "url": "https://github.com/zenstackhq/zenstack"
    },
    "scripts": {
        "build": "pnpm lint --max-warnings=0 && pnpm zx --verbose ./scripts/build.mjs && pnpm pack --pack-destination ../../.build",
        "watch": "tsup-node --watch",
        "lint": "eslint src --ext ts",
        "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
        "prepublishOnly": "pnpm build"
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "typings": "dist/index.d.ts",
    "files": ["dist"],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./enhance": {
            "import": {
                "types": "./dist/enhance.d.mts",
                "default": "./dist/enhance.mjs"
            },
            "require": {
                "types": "./dist/enhance.d.ts",
                "default": "./dist/enhance.js"
            }
        },
        "./edge": {
            "import": {
                "types": "./dist/edge.d.mts",
                "default": "./dist/edge.mjs"
            },
            "require": {
                "types": "./dist/edge.d.ts",
                "default": "./dist/edge.js"
            }
        },
        "./enhancements/node": {
            "import": {
                "types": "./dist/enhancements/node/index.d.mts",
                "default": "./dist/enhancements/node/index.mjs"
            },
            "require": {
                "types": "./dist/enhancements/node/index.d.ts",
                "default": "./dist/enhancements/node/index.js"
            }
        },
        "./enhancements/edge": {
            "import": {
                "types": "./dist/enhancements/edge/index.d.mts",
                "default": "./dist/enhancements/edge/index.mjs"
            },
            "require": {
                "types": "./dist/enhancements/edge/index.d.ts",
                "default": "./dist/enhancements/edge/index.js"
            }
        },
        "./validation": {
            "import": {
                "types": "./dist/validation.d.mts",
                "default": "./dist/validation.mjs"
            },
            "require": {
                "types": "./dist/validation.d.ts",
                "default": "./dist/validation.js"
            }
        },
        "./zod": {
            "import": {
                "types": "./dist/zod/index.d.mts",
                "default": "./dist/zod/index.mjs"
            },
            "require": {
                "types": "./dist/zod/index.d.ts",
                "default": "./dist/zod/index.js"
            }
        },
        "./zod/input": {
            "import": {
                "types": "./dist/zod/input.d.mts",
                "default": "./dist/zod/input.mjs"
            },
            "require": {
                "types": "./dist/zod/input.d.ts",
                "default": "./dist/zod/input.js"
            }
        },
        "./zod/models": {
            "import": {
                "types": "./dist/zod/models.d.mts",
                "default": "./dist/zod/models.mjs"
            },
            "require": {
                "types": "./dist/zod/models.d.ts",
                "default": "./dist/zod/models.js"
            }
        },
        "./zod/objects": {
            "import": {
                "types": "./dist/zod/objects.d.mts",
                "default": "./dist/zod/objects.mjs"
            },
            "require": {
                "types": "./dist/zod/objects.d.ts",
                "default": "./dist/zod/objects.js"
            }
        },
        "./browser": {
            "import": {
                "types": "./dist/browser/index.d.mts",
                "default": "./dist/browser/index.mjs"
            },
            "require": {
                "types": "./dist/browser/index.d.ts",
                "default": "./dist/browser/index.js"
            }
        },
        "./cross": {
            "import": {
                "types": "./dist/cross/index.d.mts",
                "default": "./dist/cross/index.mjs"
            },
            "require": {
                "types": "./dist/cross/index.d.ts",
                "default": "./dist/cross/index.js"
            }
        },
        "./model-meta": {
            "import": {
                "types": "./dist/model-meta.d.mts",
                "default": "./dist/model-meta.mjs"
            },
            "require": {
                "types": "./dist/model-meta.d.ts",
                "default": "./dist/model-meta.js"
            }
        },
        "./models": {
            "import": {
                "types": "./dist/models.d.mts"
            },
            "require": {
                "types": "./dist/models.d.ts"
            }
        },
        "./zod-utils": {
            "import": {
                "types": "./dist/zod-utils.d.mts",
                "default": "./dist/zod-utils.mjs"
            },
            "require": {
                "types": "./dist/zod-utils.d.ts",
                "default": "./dist/zod-utils.js"
            }       
        },
        "./package.json": "./package.json"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "buffer": "^6.0.3",
        "change-case": "^4.1.2",
        "decimal.js-light": "^2.5.1",
        "deepmerge": "^4.3.1",
        "is-plain-object": "^5.0.0",
        "logic-solver": "^2.0.1",
        "lower-case-first": "^2.0.2",
        "pluralize": "^8.0.0",
        "safe-json-stringify": "^1.2.0",
        "semver": "^7.5.2",
        "superjson": "^1.13.0",
        "tiny-invariant": "^1.3.1",
        "traverse": "^0.6.10",
        "ts-pattern": "^4.3.0",
        "tslib": "^2.4.1",
        "upper-case-first": "^2.0.2",
        "uuid": "^9.0.0",
        "zod": "^3.22.4",
        "zod-validation-error": "^1.5.0"
    },
    "peerDependencies": {
        "@prisma/client": "5.0.0 - 6.0.x"
    },
    "author": {
        "name": "ZenStack Team"
    },
    "homepage": "https://zenstack.dev",
    "license": "MIT",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/pluralize": "^0.0.29",
        "@types/safe-json-stringify": "^1.1.5",
        "@types/semver": "^7.3.13",
        "@types/traverse": "^0.6.37",
        "@types/uuid": "^8.3.4"
    }
}
