{
  "name": "@zenstackhq/testtools",
  "version": "2.10.1",
  "description": "ZenStack Test Tools",
  "private": true,
  "scripts": {
    "lint": "eslint src --ext ts",
    "build": "pnpm lint && tsup-node && pnpm pack --pack-destination ../../.build",
    "watch": "tsup-node --watch",
    "prepublishOnly": "pnpm build"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": ["dist"],
  "keywords": [],
  "author": "",
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./jest-ext": {
      "import": {
        "types": "./dist/jest-ext.d.mts",
        "default": "./dist/jest-ext.mjs"
      },
      "require": {
        "types": "./dist/jest-ext.d.ts",
        "default": "./dist/jest-ext.js"
      }
    }
  },
  "dependencies": {
    "@zenstackhq/language": "workspace:*",
    "@zenstackhq/runtime": "workspace:*",
    "@zenstackhq/sdk": "workspace:*",
    "json5": "^2.2.3",
    "langium": "1.3.1",
    "pg": "^8.11.1",
    "tiny-invariant": "^1.3.1",
    "tmp": "^0.2.1",
    "vscode-uri": "^3.0.6",
    "zenstack": "workspace:*"
  },
  "devDependencies": {
    "@types/pg": "^8.10.2",
    "@types/tmp": "^0.2.3"
  }
}
